    id: root

    spacing: Theme.spacingS

    StyledText {
        text: I18n.tr("No devices found", "KDE Connect no devices message")
        font.pixelSize: Theme.fontSizeMedium
        color: Theme.surfaceVariantText
        anchors.horizontalCenter: parent.horizontalCenter
